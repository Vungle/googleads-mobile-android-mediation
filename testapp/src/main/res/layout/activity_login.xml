<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/app_name"
        android:textColor="@android:color/white"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/iconLL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTV"
        android:layout_centerHorizontal="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/vungle_logo" />

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/admob_icon" />

    </LinearLayout>

    <TextView
        android:id="@+id/versionInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iconLL"
        android:layout_centerHorizontal="true"
        android:textColor="@android:color/white" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/main_vungle_api_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:hint="API Host">

        <androidx.appcompat.widget.AppCompatAutoCompleteTextView
            android:id="@+id/main_api_host_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:completionThreshold="1"
            android:inputType="textUri"
            android:maxLines="1"
            android:textColor="@android:color/white"
            android:textSize="14sp" />

    </com.google.android.material.textfield.TextInputLayout>

  <CheckBox
    android:id="@+id/native_ads_rtb_header"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="24dp"
    android:layout_above="@id/main_vungle_api_container"
    android:layout_marginBottom="16dp"
    android:layout_marginRight="24dp"
    android:text="Native extra headers"
    android:textColor="@android:color/white" />

    <Button
      android:id="@+id/privacySettings"
      style="@style/Widget.AppCompat.Button.Colored"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_below="@id/main_vungle_api_container"
      android:layout_marginLeft="24dp"
      android:text="@string/privacy_settings"
      android:textColor="@android:color/white" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/main_init_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="24dp"
        android:foregroundGravity="center"
        android:src="@drawable/ic_play_arrow_black_24dp"
        android:tint="@android:color/white"
        app:fabSize="normal" />
</RelativeLayout>