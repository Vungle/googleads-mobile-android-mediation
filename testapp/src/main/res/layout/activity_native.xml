<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent">

  <Button
    android:id="@+id/refreshAdBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/native_container"
    android:text="Refresh"
    android:textAllCaps="false" />

  <Button
    android:id="@+id/destroyAdBtn"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_alignBaseline="@id/refreshAdBtn"
    android:layout_toRightOf="@id/refreshAdBtn"
    android:text="Destroy"
    android:textAllCaps="false" />

  <FrameLayout
    android:id="@+id/native_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />

  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/refreshAdBtn">
    <TextView
      android:id="@+id/ad_logs"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />
  </ScrollView>

</RelativeLayout>
